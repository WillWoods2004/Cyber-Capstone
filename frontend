//Front-end code. This will hold all front-end information and implement secure coding practices - William Woods.

// app/login/page.tsx
"use client";
import { useForm } from "react-hook-form";
import { z } from "zod";
import { zodResolver } from "@hookform/resolvers/zod";
import { useState } from "react";

const LoginSchema = z.object({
  email: z.string().email("Enter a valid email"),
  password: z.string().min(1, "Password is required"),
  mfaCode: z.string().optional(),
});

export default function LoginPage() {
  const [needsMfa, setNeedsMfa] = useState(false);
  const { register, handleSubmit, formState: { errors, isSubmitting } } =
    useForm<z.infer<typeof LoginSchema>>({ resolver: zodResolver(LoginSchema) });

  const onSubmit = async (values: z.infer<typeof LoginSchema>) => {
    const res = await fetch("/api/auth/login", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(values),
    });
    const data = await res.json();
    if (data.status === "MFA_REQUIRED") {
      setNeedsMfa(true);
    } else if (data.status === "OK") {
      window.location.href = "/dashboard";
    } else {
      alert(data.message ?? "Login failed");
    }
  };

  return (
    <div className="min-h-screen grid place-items-center p-6">
      <form onSubmit={handleSubmit(onSubmit)} className="w-full max-w-sm space-y-4">
        <h1 className="text-2xl font-semibold">Sign in to SecurityPass</h1>

        <div>
          <label className="block text-sm mb-1">Email</label>
          <input className="w-full border rounded p-2"
                 type="email" {...register("email")} />
          {errors.email && <p className="text-sm text-red-600">{errors.email.message}</p>}
        </div>

        <div>
          <label className="block text-sm mb-1">Password</label>
          <input className="w-full border rounded p-2"
                 type="password" {...register("password")} />
          {errors.password && <p className="text-sm text-red-600">{errors.password.message}</p>}
        </div>

        {needsMfa && (
          <div>
            <label className="block text-sm mb-1">MFA Code</label>
            <input className="w-full border rounded p-2"
                   placeholder="123456" {...register("mfaCode")} />
          </div>
        )}

        <button className="w-full rounded p-2 border" disabled={isSubmitting}>
          {isSubmitting ? "Signing in..." : "Sign in"}
        </button>

        <div className="text-sm text-center">
          <a href="/register" className="underline">Create account</a>
        </div>
      </form>
    </div>
  );
}
